<UserControl x:Class="WorldCup.WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="60" Height="60">
    <Border Background="White" CornerRadius="30" BorderBrush="Black" BorderThickness="1">
        <TextBlock x:Name="txtPlayerName"
                   Text="Name"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="10"
                   TextWrapping="Wrap" />
    </Border>
</UserControl>
