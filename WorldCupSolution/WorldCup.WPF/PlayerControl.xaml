<UserControl x:Class="WorldCup.WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="100">
    <Grid>
        <!-- Circle for player representation -->
        <Ellipse Width="60" Height="60" Fill="#007ACC" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center"/>

        <!-- Player number in center of circle -->
        <TextBlock x:Name="txtNumber"
                   Text="10"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- Player name below circle -->
        <TextBlock x:Name="txtName"
                   Text="Player Name"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,5"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
    </Grid>
</UserControl>
